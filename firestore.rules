rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // AI Interactions collection - from PR #44
    match /ai_interactions/{interactionId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // OQT Queries collection - dashboard queries
    match /oqt_queries/{queryId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // OQT Training Events collection
    match /oqt_training_events/{eventId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // OQT Metrics collection
    match /oqt_metrics/{metricId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // OQT Ledger collection - immutable transparency log
    match /oqt_ledger/{blockId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if false; // Ledger blocks are immutable
      allow delete: if false; // Ledger blocks cannot be deleted
    }
    
    // Admin Settings collection - for OpenSeek Admin Panel
    match /admin_settings/{settingId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
