{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AI Interaction",
  "description": "Schema for AI interaction data collected for OQT-1.0 training",
  "type": "object",
  "required": ["id", "timestamp", "question", "responses"],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this interaction"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of when the interaction occurred"
    },
    "question": {
      "type": "string",
      "minLength": 1,
      "description": "The question asked by the user"
    },
    "responses": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["model", "response_text"],
        "properties": {
          "model": {
            "type": "string",
            "description": "Name of the AI model that provided this response"
          },
          "version": {
            "type": "string",
            "description": "Version of the AI model"
          },
          "response_text": {
            "type": "string",
            "description": "The response text from the AI model"
          },
          "metadata": {
            "type": "object",
            "properties": {
              "tokens": {
                "type": "number",
                "minimum": 0,
                "description": "Number of tokens in the response"
              },
              "latency_ms": {
                "type": "number",
                "minimum": 0,
                "description": "Latency in milliseconds"
              },
              "temperature": {
                "type": "number",
                "minimum": 0,
                "maximum": 2,
                "description": "Temperature parameter used for generation"
              }
            }
          }
        }
      }
    },
    "provenance": {
      "type": "object",
      "description": "Provenance data for transparency and auditing",
      "properties": {
        "user_id": {
          "type": "string",
          "description": "Anonymized user identifier"
        },
        "session_id": {
          "type": "string",
          "description": "Session identifier"
        },
        "source": {
          "type": "string",
          "enum": ["chat", "api", "batch"],
          "description": "Source of the interaction"
        },
        "ip_hash": {
          "type": ["string", "null"],
          "description": "Hashed IP address for security tracking"
        }
      }
    },
    "analysis": {
      "type": "object",
      "description": "Automated analysis results",
      "properties": {
        "consensus_score": {
          "type": ["number", "null"],
          "minimum": 0,
          "maximum": 1,
          "description": "Consensus score between responses (0-1)"
        },
        "bias_detected": {
          "type": "boolean",
          "description": "Whether bias was detected in responses"
        },
        "sentiment": {
          "type": ["object", "null"],
          "description": "Sentiment analysis results"
        },
        "topics": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Identified topics in the interaction"
        }
      }
    }
  }
}
